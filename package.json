{
	"name": "claude-arena",
	"version": "2.0.0",
	"description": "Evaluate and optimize system prompt effectiveness - find the best way to express your system prompts",
	"type": "module",
	"bin": {
		"claude-arena": "./src/index.ts"
	},
	"files": ["src"],
	"scripts": {
		"start": "bun run src/index.ts",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"ci": "biome check . && tsc --noEmit"
	},
	"keywords": [
		"claude",
		"claude-code",
		"claude.md",
		"system-prompt",
		"prompt-engineering",
		"prompt-testing",
		"ai",
		"evaluation"
	],
	"author": "John Lindquist",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johnlindquist/claude-arena.git"
	},
	"homepage": "https://github.com/johnlindquist/claude-arena#readme",
	"bugs": {
		"url": "https://github.com/johnlindquist/claude-arena/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/bun": "latest",
		"semantic-release": "^24.2.0",
		"typescript": "^5",
		"vitest": "latest"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"dependencies": {
		"ora": "^9.0.0",
		"picocolors": "^1.1.1"
	}
}
